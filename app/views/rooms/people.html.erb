<h1>Rooms#description</h1>
<p>Find me in app/views/rooms/description.html.erb</p>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <%= render 'room_menu' %>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                <h4 class="mt-4 mb-4"><b>宿泊可能人数</b></h4>
                    <%= form_for @room do |f| %>
                        <div class="mb-4">
                            <label>宿泊可能人数
                            </label>
                            <%= f.text_field :r_name, placeholder: "宿泊可能人数", class: "form-control w-100", required: true %>
                    </div>
                    <div>
                        <%= f.submit "保存", class: "btn btn-danger w-100" %>
                    </div>
                    <% end %>
                
                </div>
            </div>
        </div>
    </div>
</div>