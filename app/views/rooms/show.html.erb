<div class="container mt-4">
    <div class="row">
        <!-- 右側 -->
        <div class="col-md-3 mb-2">
            <!-- 予約フォーム -->
            <%= render 'reservations/form' %>
        </div>

            <!-- 部屋のインフォメーション -->
            <div class="card mb-2">
                <div class="card-body">    
                    <div class="row">
                        <div class="col-3">
                            <i class="fas fa-home fa-2x" style="color: cadetblue"></i><br/>
                        </div>
                        <div class="col-3">
                            <i class="fas fa-user fa-2x" style="color: cadetblue"></i><br/>
                            <%= pluralize(@room.people, "人宿泊可能") %>
                        </div>

                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">        
                    <div class="badge bg-secondary mb-4">部屋の詳細</div>
                    <p><%= @room.r_self %></p>
                </div>
            </div>            

        </div>
    </div>
</div>