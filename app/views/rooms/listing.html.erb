<h1>Rooms#listing</h1>
<p>Find me in app/views/rooms/listing.html.erb</p>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <%= render 'room_menu' %>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                <h4 class="mt-4 mb-4"><b>部屋の修正</b></h4>
                    <%= form_for @room do |f| %>
                        <div class="row mb-4">            
                        <div class="col-md-4">
                        <div class="mb-2">
                            <label>施設名</label>
                            <%= f.text_field :r_name,
                                id: "r_name", class: "form-control" %>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-2">
                            <label>写真</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">          
                    <div class="col-md-4">
                        <div class="mb-2">
                            <label>紹介</label>
                            <%= f.text_area :r_self,
                                id: "r_self", class: "form-control" %>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-2">
                            <label>料金</label>
                            <%= f.text_field :r_price,
                                id: "r_price", class: "form-control" %>
                        </div>
                    </div>
                    <div class="col-md-4">
                     <div class="mb-2">
                            <label>作成日</label>
                            <%= f.date_field :r_create,
                                id: "r_create", class: "form-control" %>
                        </div>
                     </div>
                     <div class="col-md-4">
                      <div class="mb-2">
                            <label>住所</label>
                            <%= f.text_field :r_address,
                                id: "r_address", class: "form-control" %>
                      </div>
                     </div>
                </div>
                        <%= f.submit "修正する", class: "btn btn-danger w-100" %>        
                    <% end %>            
                </div>
            </div>
        </div>
    </div>
</div>